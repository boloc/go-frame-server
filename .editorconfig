root = true

[*]
charset = utf-8
end_of_line = lf
# indent_size = 4
# indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml,yml.example, yaml.example}]
indent_size = 2
indent_style = space

[docker-compose*.yml]
indent_size = 4
indent_style = space

[*.toml]
indent_size = 2
indent_style = space

[*.lua]
indent_size = 2
indent_style = space
end_of_line = lf

[*.json]
indent_size = 2
indent_style = space
end_of_line = lf
